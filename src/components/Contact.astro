---
import { Icon } from 'astro-icon/components';
---

<!-- Contact -->
<div class="">
    <div class="max-w-5xl px-4 xl:px-0 py-10 lg:py-20 mx-auto">
      <!-- Title -->
      <div class="max-w-3xl mb-10 lg:mb-14">
        <h2 class="text-dark dark:text-light font-semibold text-2xl md:text-4xl md:leading-tight">Contact us</h2>
        <p class="mt-1 text-neutral-400">Whatever your goal - we will get you there.</p>
      </div>
      <!-- End Title -->
  
      <!-- Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-x-10 lg:gap-x-16">
        <div class="md:order-2 border-b border-neutral-800 pb-10 mb-10 md:border-b-0 md:pb-0 md:mb-0 rounded-lg overflow-hidden">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2892.8748133307104!2d16.4502809!3d43.5258032!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x13355fcb44dde8b9%3A0x1ab4191c412e1e6c!2sPlesni%20studio%20Baila%20Conmigo!5e0!3m2!1sen!2shr!4v1715961166594!5m2!1sen!2shr" width="100%" height="350" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
        <!-- End Col -->
  
        <div class="space-y-14">
          <!-- Item -->
          <div class="flex gap-x-5">
            <svg class="flex-shrink-0 size-6 text-neutral-500" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>
            <div class="grow">
              <h4 class="text-dark dark:text-light font-semibold">Our address:</h4>
  
              <address class="mt-1 text-neutral-400 text-sm not-italic">
                Stinice 22<br>
                21000, Split
              </address>
            </div>
          </div>
          <!-- End Item -->
  
          <!-- Item -->
          <div class="flex gap-x-5">
            <svg class="flex-shrink-0 size-6 text-neutral-500" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M21.2 8.4c.5.38.8.97.8 1.6v10a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V10a2 2 0 0 1 .8-1.6l8-6a2 2 0 0 1 2.4 0l8 6Z"/><path d="m22 10-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 10"/></svg>
            <div class="grow">
              <h4 class="text-dark dark:text-light font-semibold">Email us:</h4>
  
              <a class="mt-1 text-neutral-400 text-sm" href="#mailto:example@site.co" target="_blank">
                info@bailaconmigo.com
              </a>
            </div>
          </div>
          <!-- End Item -->
  
          <!-- Item -->
          <div class="flex gap-x-5">
            <Icon name="bi:telephone" class="text-neutral-500 flex-shrink-0 size-6"/>            
            <div class="grow">
              <h4 class="text-dark dark:text-light font-semibold">Phone</h4>
              <p class="mt-1 text-neutral-400">+385 99 999 9999</p>
            </div>
          </div>
          <!-- End Item -->
        </div>
        <!-- End Col -->
      </div>
      <!-- End Grid -->
    </div>
  </div>
  <!-- End Contact -->